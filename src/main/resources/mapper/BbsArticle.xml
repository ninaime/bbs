<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mime.bbs.mapper.BbsArticleMapper">
	<!-- column：对应数据库列名  jdbcType：类型  property：对应实体类中属性-->
	<resultMap id="BaseResultMap" type="com.mime.bbs.model.BbsArticle">
		<id column="ID" jdbcType="INTEGER" property="id" />
		<result column="CATALOG_ID" jdbcType="INTEGER" property="catalogId" />
		<result column="TITLE" jdbcType="VARCHAR" property="title" />
		<result column="english_Title" jdbcType="VARCHAR" property="englishTitle" />
		<result column="summary" jdbcType="VARCHAR" property="summary" />
		<result column="author_Id" jdbcType="VARCHAR" property="authorId" />
		<result column="context" jdbcType="VARCHAR" property="context" />
		<result column="view_Count" jdbcType="INTEGER" property="viewCount" />
		<result column="comment_Count" jdbcType="INTEGER" property="commentCount" />
		<result column="weight" jdbcType="INTEGER" property="weight" />
		<result column="IS_DISABLE" jdbcType="INTEGER" property="isDisable" />
		<result column="GMT_CREATE" jdbcType="DATE" property="gmtCreate" />
		<result column="GMT_MODIFIED" jdbcType="DATE" property="gmtModified" />
	</resultMap>
	
	<select id="findArticle" resultMap="BaseResultMap">
		select * from bbs_article where is_disable=0
	</select>
	
	
	
	
	
	
	
	
	
	
	

</mapper>